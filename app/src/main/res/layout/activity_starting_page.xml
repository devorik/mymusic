<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F51E38"
    android:padding="20dp"
    tools:context=".StartingPageActivity">


    <ImageView
        android:layout_weight="3"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="10dp"
        android:src="@mipmap/ic_music_girl_foreground"
        android:layout_gravity="center"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_weight="2"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Listening and watching\nanytime, anywhere"
            android:textSize="27sp"
            android:textColor="#fff"
            />
        <TextView
            android:layout_marginTop="10dp"
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The artists we represent are one of\nthe most successful in World and also\nwere a huge breakthrough."
            android:textSize="19sp"
            android:textColor="#fff"
            />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/get_start_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="right"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GET START"
            android:textColor="#fff"
            android:layout_gravity="center"
            android:textSize="16sp"
            />
        <ImageView
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:src="@drawable/ic_group_22"
            />
    </LinearLayout>

</LinearLayout>